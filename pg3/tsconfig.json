{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "lib": [
            "es2020",
            "dom"
        ],
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/enricher/**/*",
        "src/index.ts"
    ],
    "exclude": [
        "node_modules",
        "src/analytics",
        "src/api",
        "src/scripts",
        "src/observability"
    ]
}